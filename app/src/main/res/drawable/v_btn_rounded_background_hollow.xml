<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#88000000"
    tools:targetApi="lollipop" >

    <item android:id="@android:id/mask">
        <shape>
            <corners
                android:bottomRightRadius="23dp"
                android:bottomLeftRadius="23dp"
                android:topLeftRadius="23dp"
                android:topRightRadius="23dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:color="#ffffff" android:width="2dp"/> <!-- this one is ths color of the Rounded Button -->
            <solid android:color="@android:color/transparent"/>
            <corners
                android:bottomRightRadius="23dp"
                android:bottomLeftRadius="23dp"
                android:topLeftRadius="23dp"
                android:topRightRadius="23dp"/>
        </shape>
    </item>
</ripple>
